<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">

	<!-- 찜리스트 조회 -->
	<select id="heart_list" parameterType="int" resultType="int">


		select
		HB_IDX from wishlist
		where user_Id=#{user_Id}


	</select>

	<!-- 찜리스트 조회 -->
	<select id="ggim_list" parameterType="int" resultType="hobee">

		select *
		from hobee
		where hb_idx=#{hb_idx}



	</select>



	<!--신청내역 조회 1 -->
	<select id="apply_list" resultType="int" parameterType="int">

		select
		reserve_id
		from reserve
		where user_Id=#{user_Id}
		order by reserve_id desc

	</select>

	<!-- 신청내역 조회 2 -->
	<select id="finish_apply" resultType="hobee" parameterType="int">

		select * from hobee
		where hb_idx=#{hb_idx}
	</select>


	<select id="reserve_info" resultType="reserve"
		parameterType="int">
		SELECT *
		FROM reserve
		WHERE reserve_id = #{reserve_id}

	</select>

	<!--신청내역에서 카테고리네임 불러오기 -->
	<select id="category_select" resultType="string"
		parameterType="int">
		select CATEGORY_NAME From category
		where CATEGORY_NUM =#{CATEGORY_NUM}

	</select>


	<!--신청내역 삭제 -->
	<delete id="apply_delete" parameterType="int">
		delete from reserve
		where reserve_id=#{reserve_id}

	</delete>


	<!--회원수정을 위한 유저 한명 조회 -->

	<select id="user_update_view" resultType="users"
		parameterType="int">


		select * from users
		where user_Id=#{user_Id}


	</select>



	<!--회원 수정된것을 업데이트 하는것 -->

	<update id="user_update" parameterType="users">

		update users set
		user_name = #{user_name},
		user_pwd = #{pwd_change},
		user_email =
		#{user_email}
		where user_Id = #{user_Id}
	</update>

	<!-- 회원삭제를 위한 한명 조회하기 -->
	<select id="user_delete_view" resultType="users"
		parameterType="int">


		select * from users
		where user_Id=#{user_Id}



	</select>

	<!-- 회원삭제를 해보자 -->
	<delete id="user_delete_finish" parameterType="users">


		delete from users
		where user_Id=#{user_Id}
		and user_pwd=#{user_pwd}



	</delete>


</mapper>












